---

interface Props {
    name: string;
    url:  string;
    isBig?: boolean;
}

const { name, url, isBig= false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/${id}.png`;


---

<a
href ={`/pokemons/${name}`}
class:list={
    [
        "rounded border flex flex-col justify-center items-center p-2",
        {
          border : !isBig,  
        }
    ]
}
>
    <img  transition:name={`${name}-image`} src={imageSrc} alt={name} class="w-32 h-32 object-cover rounded-lg" />

    <span class="capitalize"> #{id} {name}</span>
</a>